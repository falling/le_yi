<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:fillViewport="true"
        android:background="#ffffff">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4f64ea">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:id="@+id/Main_Grid"
                android:layout_above="@+id/nextOne"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="音标（英）"
                    android:id="@+id/Main_textView2"
                    android:layout_row="0"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="音标（美）"
                    android:id="@+id/Main_textView3"
                    android:layout_row="2"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/Main_psE"
                    android:layout_row="0"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/Main_psA"
                    android:layout_row="2"
                    android:layout_column="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_row="0"
                    android:layout_column="2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:layout_row="2"
                    android:layout_column="2" />

            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/main_page_word"
                android:height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="下一个"
                android:id="@+id/nextOne"
                android:textColor="#caa703"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="13dp"
                android:layout_alignBottom="@+id/main_page_word"
                android:layout_alignParentEnd="true"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="加入收藏"
                android:id="@+id/collection"
                android:layout_alignBottom="@+id/nextOne"
                android:layout_toStartOf="@+id/nextOne"
                android:layout_marginEnd="13dp"
                android:textColor="#caa703"
                android:clickable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="上一个"
                android:id="@+id/previousOne"
                android:layout_alignBottom="@+id/collection"
                android:layout_toStartOf="@+id/collection"
                android:layout_marginEnd="13dp"
                android:textColor="#caa703"
                android:clickable="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/main_page_EG"
                android:textSize="15sp"
                android:background="#ffffff"
                android:layout_below="@+id/main_page_word"
                android:layout_alignParentStart="true"
                android:layout_marginTop="23dp" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>